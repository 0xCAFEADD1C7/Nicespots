<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<display-name>UserServlet</display-name>
		<description></description>
		<servlet-class>org.Servlets.UserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SpotServlet</servlet-name>
		<display-name>SpotServlet</display-name>
		<description></description>
		<servlet-class>org.Servlets.SpotServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CommentaireServlet</servlet-name>
		<display-name>CommentaireServlet</display-name>
		<description></description>
		<servlet-class>org.Servlets.CommentaireServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<display-name>LoginServlet</display-name>
		<description></description>
		<servlet-class>org.Servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SignUpServlet</servlet-name>
		<display-name>SignUpServlet</display-name>
		<description></description>
		<servlet-class>org.Servlets.SignUpServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SpotServlet</servlet-name>
		<url-pattern>/spot*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CommentaireServlet</servlet-name>
		<url-pattern>/CommentaireServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SignUpServlet</servlet-name>
		<url-pattern>/SignUpServlet</url-pattern>
	</servlet-mapping>


	<filter>
		<filter-name>CORSFilter</filter-name>
		<filter-class>org.filter.CORSFilter</filter-class>
	</filter>
	
